\usepackage{graphics}
\def\obr#1#2{
	\addtocounter{figure}{1}
	\begin{figure}[!htp]
	  \centerline{
	    \includegraphics{#1}
	  }
	  
	  \bigskip\noindent
	  \begin{center}
		Obr. \thefigure. #2
	  \end{center}
	\end{figure}
}



